<div class="col-md-12">
  <div class="custom-email-dashboard-div">
    <div class="row">
      <div class="col-md-12">
        <div class="custom-header-border-section">
          <h6>EMAIL DETAILS</h6>
        </div>
      </div>
    </div>
    <div class="container">
      <%= form_for @contact do |f| %>
        <div class="row">
           <div class="col-md-6">
              <div class="custom-email-dashboard-rhtform">
                <div class="form-group">
                  <label for="text" class="custom-email-lable">NAME</label>
                  <%= f.text_field :name, class: 'form-control', value: params[:sender_name] %>
                </div>
                <div class="form-group">
                  <label for="" class="custom-email-lable">Designation</label>
                  <%= f.text_field :designation, class: 'form-control', value: @result && @result["data"].present? ? @result["data"][0]["job_titles"] : nil %>
                </div>
                <div class="form-group">
                  <label for="" class="custom-email-lable">BCC</label>
                  <%= f.text_field :blink_carbon_copy, class: 'form-control', value: params[:bcc] %>
                </div>
                <div class="form-group">
                  <label for="" class="custom-email-lable">FB URL</label>
                  <%= f.text_field :facebook_url, class: 'form-control', value: @result && @result["data"].present? ? @result["data"][0]["social_link"]["facebook"][0] :nil %>
                </div>
                <div class="form-group">
                  <label for="" class="custom-email-lable">Twitter Url</label>
                  <%= f.text_field :twitter_url, class: 'form-control', value: @result && @result["data"].present? ? @result["data"][0]["social_link"]["twitter"][0] : nil %>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="custom-email-dashbord-lftform">
                <div class="form-group">
                  <label for="text" class="custom-email-lable">Email</label>
                  <%= f.text_field :sender_email, class: 'form-control', value: params[:sender_email] %>
                </div>
                <div class="form-group">
                  <label for="" class="custom-email-lable">CC</label>
                  <%= f.text_field :carbon_copy, class: 'form-control', value: params[:cc] %>
                </div>
                <%= f.hidden_field :email_id, value: params[:mail_id].present? ? params[:mail_id] : nil %>
                <div class="form-group">
                  <label for="" class="custom-email-lable">To</label>
                  <%= f.text_field :receiver_email, class: 'form-control', value: params[:receiver_email] %>
                </div>
                <div class="form-group">
                  <label for="" class="custom-email-lable">LINKDIN URL</label>
                  <%= f.text_field :linkedin_url, class: 'form-control', value: @result && @result["data"].present? ? @result["data"][0]["social_link"]["linkedin"][0] : nil %>
                </div>
                <div class="form-group">
                  <label for="" class="custom-email-lable">WEBSITE</label>
                  <%= f.text_field :website, class: 'form-control', value: @result && @result["data"].present? ?  @result["data"][0]["websites"][0] : nil %>
                </div>   
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="dashboard-email-form-button">
                <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
                  Save
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <div class="custom-footer-border-section">
    </div>
</div>


<script type="text/javascript">
  var newurl = window.location.href.split("?")[0];
  window.history.pushState({path:newurl},'',newurl);
</script>